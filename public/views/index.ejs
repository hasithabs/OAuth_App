<!DOCTYPE html>
<html>

<head>
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
  <title>OAuth FB Events Demo</title>
  <link rel="stylesheet" type="text/css" href="main.css">
  <link rel="stylesheet" type="text/css" href="login.css">
  <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.3.1/jquery.js"></script>
</head>

<body>
  <div class="login">
    <h1 id="status">Login</h1>
    <button id="fbLink" class="loginBtn loginBtn--facebook">Login with Facebook</button>
  </div>
</body>

<script>
  $(document).ready(function () {
    $("#fbLink").click(fbRequest);
  });
  function fbRequest() {
    var AUTH_ENDPOINT = "https://www.facebook.com/dialog/oauth";
    var RESPONSE_TYPE = "code";
    var CLIENT_ID = "301634764001016";
    var REDIRECT_URI = "http://localhost:3000/events";
    var SCOPE = "public_profile user_events";

    var requestEndpoint = AUTH_ENDPOINT + "?" +
    "response_type=" + encodeURIComponent(RESPONSE_TYPE) + "&" +
    "client_id=" + encodeURIComponent(CLIENT_ID) + "&" +
    "redirect_uri=" + encodeURIComponent(REDIRECT_URI) + "&" +
    "scope=" + encodeURIComponent(SCOPE);

    window.location.href = requestEndpoint;
  }
</script>

</html>